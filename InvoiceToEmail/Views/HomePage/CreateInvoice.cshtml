@model InvoiceToEmail.Data.Model.Invoice
@{
    ViewData["Title"] = "Create New";
}

<h1>Create New</h1>
<h3>List Item</h3>

<div class="container">
    <form asp-action="CreateInvoice" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" required>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input type="text" class="form-control" id="Price" name="Price" value="@Model?.Price" required>
        </div>

        <div class="mb-3">
            <label for="CuId" class="form-label">Customer</label>
            <select class="form-control" id="CuId" name="CuId" required>
                <option value="">-- Select Customer --</option>
                @foreach (var customer in ViewBag.Customers as List<SelectListItem>)
                {
                    <option value="@customer.Value">@customer.Text</option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/HomePage/Home" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
