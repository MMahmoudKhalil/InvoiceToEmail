@model InvoiceToEmail.Data.Model.Customer

@{
    ViewData["Title"] = "Create New";
}

<h1>Create New</h1>
<h3>List Item</h3>

<div class="container">
    <form asp-action="CreateCustomer" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" required>
        </div>
        <div class="mb-3">
            <label for="VatNumber" class="form-label">VatNumber</label>
            <input type="text" class="form-control" id="VatNumber" name="VatNumber" value="@Model?.VatNumber" required>
        </div>

        <div class="mb-3">
            <label for="Phone" class="form-label">PhoneNumber</label>
            <input type="text" class="form-control" id="Phone" name="Phone" value="@Model?.Phone" required>
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="text" class="form-control" id="Email" name="Email" value="@Model?.Email" required>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/HomePage/Home" class="btn btn-secondary">Back</a>
        </div>

    </form>
</div>

